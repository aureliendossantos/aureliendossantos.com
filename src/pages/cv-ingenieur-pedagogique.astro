---
import ResumeEntry from "$components/portfolio/resume/ResumeEntry.astro"
import BaseLayout from "$layouts/BaseLayout.astro"
import "$styles/hyphenation.css"

const title = "Ingénieur pédagogique"
const bio = `
	Diplômé en ingénierie de formation avec une spécialisation digital learning, je m'appuie sur ma double compétence pédagogique et technique pour concevoir des parcours d'apprentissage innovants. Mon expérience en développement web, réalisation vidéo et game design me permet de créer des expériences numériques riches et engageantes.
	`

const links = [
	{ title: "Téléphone", label: "06 68 84 92 00", href: "tel:+33668849200" },
	{ title: "Email", label: "aureliendsantos@gmail.com", href: "mailto:aureliendsantos@gmail.com" },
	{
		title: "LinkedIn",
		label: "linkedin.com/in/aureliendossantos",
		href: "https://www.linkedin.com/in/aureliendossantos/",
	},
	{
		title: "Portfolio",
		label: "aureliendossantos.com/portfolio",
		href: "https://aureliendossantos.com/portfolio",
	},
]
---

<BaseLayout title="CV" ogType="website" bg="#ffffff" description={title}>
	<div
		class="mx-auto my-16 max-w-[730px] mediumlarge:mx-16 mediumlarge:max-w-xl medium:mx-4 print:my-0 print:max-w-none"
	>
		<header
			class="flex items-end justify-between mediumlarge:flex-col mediumlarge:items-stretch mediumlarge:gap-8 print:flex-row print:items-end"
		>
			<div>
				<div class="mb-4 flex gap-4">
					<a
						href="/cv.pdf"
						target="_blank"
						class="rounded-full px-[10px] py-1 pr-[11px] text-sm no-underline ring-[1.2px] ring-black transition hover:bg-neutral-100 print:!hidden"
					>
						<Icon name="ph:download-simple" class="-mt-[0.2em] inline-block h-[1.2em]" />
						PDF
					</a>
				</div>
				<h1>Aurélien Dos Santos</h1>
				<p class="-mb-[1.5px] print:mb-0">{title}</p>
			</div>
			<aside class="text-sm">
				<ul>
					{
						links.map((link) => (
							<li class="flex gap-4">
								<span class="w-20 text-right">{link.title}</span>
								{/* <span class="hidden text-neutral-400 print:inline">•</span> */}
								<a href={link.href}>{link.label}</a>
							</li>
						))
					}
				</ul>
			</aside>
		</header>
		{/* not ideal tweak */}
		<section class="my-8 mb-[34px] mediumlarge:text-sm print:text-base">{bio}</section>
		<section
			class="grid grid-cols-[220px_1fr] gap-y-8 mediumlarge:grid-cols-1 print:grid-cols-[33%_1fr]"
		>
			<h2>Expérience</h2>
			<div>
				<ResumeEntry id="inge-peda/agence-insolence" />
				<ResumeEntry id="degica" />
				<ResumeEntry id="freelance" />
			</div>
			<h2>Formation</h2>
			<div>
				<ResumeEntry id="toulouse" />
				<ResumeEntry id="pau" />
			</div>
			<h2>Projets</h2>
			<div>
				<ResumeEntry id="inge-peda/game-dev-alliance" />
				<ResumeEntry id="inge-peda/unity" />
			</div>
			<h2>Langues</h2>
			<div>
				<h3>Français :<strong> Natif</strong></h3>
				<h3>Anglais :<strong> Capacité professionnelle complète</strong></h3>
				<p>
					TOEIC : 955/990 <span class="date">(2016)</span> et licence d'anglais <span class="date"
						>(2021)</span
					>
				</p>
				<h3>Espagnol et portugais : <strong>Notions</strong></h3>
			</div>
		</section>
	</div>
</BaseLayout>

<style is:global>
	header,
	section {
		font-family: InterVariable, sans-serif;
		font-feature-settings:
			"calt" 1,
			"dlig" 1,
			"zero" 0,
			"liga" 1;
	}
	@page {
		margin: 1in 0.4in;
	}
	a {
		@apply underline decoration-amber-500 underline-offset-2 transition hover:text-black;
	}
	h1 {
		@apply text-2xl font-semibold;
	}
	h2 {
		@apply -mt-[6px] flex items-start gap-4 text-2xl font-[550] mediumlarge:mt-0 print:-mt-[6px];
		::after {
			content: "";
			@apply mr-4 mt-[0.7em] inline-block h-[2px] flex-1 bg-neutral-300;
		}
		::before {
			content: "";
			@apply mb-4 mt-2 block h-[2px] w-1/3 bg-neutral-300;
		}
	}
	h3 {
		@apply break-after-avoid font-medium;
		&:not(:first-child) {
			@apply mt-[10px];
		}
	}
	h4 {
		@apply mt-[10px] break-after-avoid pl-5 -indent-5 font-medium;
		h3 + & {
			@apply mt-0;
		}
	}
	h4::before,
	h3 + p::before {
		content: "↳ ";
		@apply inline w-5 text-base font-medium text-neutral-400;
	}
	section {
		p,
		ul {
			@apply pl-5 text-sm text-neutral-500;
			& + p {
				@apply mt-[10px];
			}
		}
		h3 + p {
			@apply pl-0;
		}
		ul {
			@apply list-disc;
			li::marker {
				content: "• ";
				@apply text-neutral-400;
			}
		}
	}
	p,
	ul {
		hyphens: auto;
		@apply break-inside-avoid text-pretty;
	}
	em {
		@apply italic;
	}
	strong {
		@apply font-[380] font-normal text-neutral-500;
	}
	.date {
		@apply whitespace-nowrap font-[380] text-neutral-500;
	}
</style>
