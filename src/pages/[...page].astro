---
import { getCollection } from "astro:content"
import Article from "$layouts/Article.astro"
import NavbarAccessFooter from "$components/NavbarAccessFooter.astro"

export async function getStaticPaths() {
	const individualPages = await getCollection("pages", ({ data }) => {
		return !data.draft || import.meta.env.DEV
	})
	return individualPages.map((article) => ({
		params: { page: article.slug },
		props: { article },
	}))
}

const { article } = Astro.props
const { Content, headings } = await article.render()
---

<Article article={article} headings={headings}>
	<Content />
	<NavbarAccessFooter palette={article.data.palette} />
</Article>
