---
import { getCollection } from "astro:content"
import Tufte from "$layouts/Tufte.astro"

export async function getStaticPaths() {
	const tufteArticles = await getCollection("tufte", ({ data }) => {
		return data.draft !== true || import.meta.env.DEV
	})
	return tufteArticles.map((article) => ({
		params: { tufte: article.slug },
		props: { article },
	}))
}

const { article } = Astro.props
const { Content } = await article.render()
---

<Tufte article={article}>
	<Content />
</Tufte>
