---
import BaseLayout from "$layouts/BaseLayout.astro"
import getBlogPosts from "$utils/getCollection"
import getUniqueValuesAndOccurences from "$utils/getUniqueValuesAndOccurences"

export async function getStaticPaths() {
	const allArticles = await getBlogPosts()
	const rawCategories = allArticles.map((article) => article.data.categories)

	const categories = getUniqueValuesAndOccurences(rawCategories)

	return Object.entries(categories).map(([category, amount], i) => {
		const filteredArticles = allArticles.filter(
			(article) => article.data.categories && article.data.categories.includes(category)
		)
		return {
			params: { category },
			props: { articles: filteredArticles, categories },
		}
	})
}

type Props = {
	title: string
	type: "Blog" | "Catégories" | "Tags" | "Lieux"
	animation: "categories" | "tags" | "places"
}
const { title, type, animation } = Astro.props

const paths = { Blog: "/blog", Catégories: "/categories", Tags: "/tags", Lieux: "/blog/places" }
const path = paths[type]
---

<BaseLayout
	ogType="website"
	title={title}
	font="Sofia Sans"
	navBarProps={{ title: title, parent: { title: "Blog", href: "/" } }}
	bg={{ light: "white", dark: "black" }}
>
	<div class="mx-auto mb-12 max-w-[500px] px-4" transition:animate="initial">
		<header class="my-10 px-5">
			<h2 class="text-sm uppercase leading-tight text-neutral-400 dark:text-neutral-700">
				<a
					href={path}
					class="bg-transparent hover:bg-neutral-200 hover:text-neutral-400 active:bg-neutral-300 dark:hover:bg-neutral-800 dark:hover:text-neutral-600 dark:active:bg-neutral-700"
				>
					{type}/
				</a>
			</h2>
			<h1 class="text-2xl leading-tight text-neutral-500">
				<span>{title}</span>
			</h1>
			<slot name="header" />
		</header>
		<slot />
	</div>
</BaseLayout>
