---
import NavbarToggleButton from "./NavbarToggleButton.astro"
---

<footer
	id="footer-for-navbar-toggle"
	class="mt-0 flex min-h-0 w-full justify-center transition-all duration-300"
>
	<NavbarToggleButton
		id="in-page-navbar-toggle"
		arrowIcon="up"
		bgClasses="hidden opacity-0 transition-all duration-300 bg-[--bg] dark:bg-[--dark-bg]"
		textAndBorderClasses="border-[--secondary-color] dark:border-[--dark-secondary-color] text-[--secondary-color] dark:text-[--dark-secondary-color]"
	/>
</footer>

<script>
	import { navbarIsOpened, openFooterWithNavbarButton } from "$utils/navbar"

	document.addEventListener("astro:page-load", () => {
		if (!navbarIsOpened()) {
			openFooterWithNavbarButton()
		}
	})
</script>
