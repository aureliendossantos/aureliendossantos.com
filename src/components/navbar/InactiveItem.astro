---
interface Props {
	id: string
	label: string
	initiallyHidden?: boolean
	borderLeft?: boolean
	borderRight?: boolean
	truncate?: boolean
}
const { id, label, initiallyHidden, borderLeft, borderRight, truncate } = Astro.props
---

<div id={`${id}-parent`} class:list={{ hidden: initiallyHidden }}>
	<div
		class:list={[
			"m-0 flex h-full items-center justify-center gap-2 whitespace-nowrap border-0 border-solid border-neutral-700 bg-black p-0 px-3 font-work-sans text-sm text-neutral-400",
			{ "border-l": borderLeft, "border-r": borderRight },
		]}
	>
		<div id={`${id}-text`} class:list={{ "truncate mediumlarge:max-w-[20vw]": truncate }}>
			{label}
		</div>
	</div>
</div>
