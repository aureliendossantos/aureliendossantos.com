---
import { Icon } from "astro-icon/components"

interface Props {
	id: string
	label: string
	shortLabel?: string
	href: string
}
const { id, label, href } = Astro.props

const shortLabel = Astro.props.shortLabel || label
---

<a
	id={id}
	class="relative m-0 flex h-full items-center justify-center gap-2 border-0 border-r border-solid border-neutral-700 bg-black p-0 px-3 font-work-sans text-sm text-white hover:bg-white hover:text-black medium:px-2"
	href={href}
>
	<div id={`${id}-text`} class="whitespace-nowrap medium:hidden">{label}</div>
	<div id={`${id}-short-text`} class="hidden whitespace-nowrap medium:block">{shortLabel}</div>
	<Icon id="navbar-link-icon" name="ic:baseline-launch" class="h-[17px] w-[17px]" />
</a>
