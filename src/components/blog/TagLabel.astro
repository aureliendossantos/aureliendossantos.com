---
interface Props {
	label: string
	slug?: string
	count: number
	type: "category" | "tag" | "place"
	disabled?: boolean
}
const { label, slug, count, type, disabled } = Astro.props

const path = { category: "categories", tag: "tags", place: "blog/places" }
---

<a
	href={`/${path[type]}/${slug || label}`}
	style={disabled ? "pointer-events: none;cursor: default;" : ""}
	class:list={[
		"mr-[2px] text-sm transition-colors duration-200 ease-in-out",
		{
			"bg-neutral-100 text-neutral-600 hover:bg-neutral-300 active:bg-neutral-400 dark:bg-neutral-800 dark:text-neutral-400 dark:hover:bg-neutral-700 dark:active:bg-neutral-600":
				!disabled,
			"bg-neutral-50 text-neutral-400 dark:bg-neutral-900 dark:text-neutral-600": disabled,
		},
	]}
	>{label}{"Â "}<span
		class={disabled
			? "text-neutral-300 dark:text-neutral-700"
			: "text-neutral-400 dark:text-neutral-600"}>{count}</span
	></a
>
