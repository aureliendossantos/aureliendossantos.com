---
interface Props {
	title: string
}
const { title } = Astro.props
---

<div class="rounded-lg border border-slate-300 shadow-sm dark:border-slate-700">
	<h2
		class="border-b border-slate-300 px-4 py-2 font-work-sans text-sm font-semibold dark:border-slate-700 dark:text-slate-200"
	>
		{title}
	</h2>
	<ul>
		<slot />
	</ul>
</div>
