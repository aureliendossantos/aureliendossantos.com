---
import getIGDBimageUrl, { type IGDBImage, type IGDBImageSize } from "$utils/remoteData/igdbClient"
import type { HTMLAttributes } from "astro/types"

interface Props extends Omit<HTMLAttributes<"img">, "src"> {
	image: IGDBImage
	size: IGDBImageSize
	retina?: boolean
	zoomable?: boolean
	zoomedRetina?: boolean
}
const { image, size, retina, zoomable, zoomedRetina, ...attributes } = Astro.props
---

<img
	src={getIGDBimageUrl(image.image_id, size, retina)}
	width={image.width}
	height={image.height}
	data-zoomable={zoomable}
	data-zoom-src={zoomable && getIGDBimageUrl(image.image_id, "original", false)}
	{...attributes}
/>
