---
import type { IGDBImage } from "$utils/remoteData/igdb"
import type { HTMLAttributes } from "astro/types"
import Image from "$components/Image.astro"
import { getImage } from "astro:assets"

/* cover_small	90 x 128	Fit
screenshot_med	569 x 320	Lfill, Center gravity
cover_big	264 x 374	Fit
logo_med	284 x 160	Fit
screenshot_big	889 x 500	Lfill, Center gravity
screenshot_huge	1280 x 720	Lfill, Center gravity
thumb	90 x 90	Thumb, Center gravity
micro	35 x 35	Thumb, Center gravity
720p	1280 x 720	Fit, Center gravity
1080p	1920 x 1080	Fit, Center gravity */
// By appending _2x to any size, you can get retina (DPR 2.0) sizes

type size =
	| "cover_small"
	| "screenshot_med"
	| "cover_big"
	| "logo_med"
	| "screenshot_big"
	| "screenshot_huge"
	| "thumb"
	| "micro"
	| "720p"
	| "1080p"

interface Props extends Omit<HTMLAttributes<"img">, "src"> {
	image: IGDBImage
	size: size
	retina?: boolean
	zoomable?: boolean
	zoomedRetina?: boolean
}
const { size, retina, zoomable, zoomedRetina, ...attributes } = Astro.props

/* using getImage to infer the size of the image so it can be displayed in the navbar */
const image = await getImage({
	src: `https://images.igdb.com/igdb/image/upload/t_${size}${retina ? "_2x" : ""}/${
		Astro.props.image.image_id
	}.jpg`,
	inferSize: true,
	...attributes,
})
const original = await getImage({
	src: `https://images.igdb.com/igdb/image/upload/t_original/${Astro.props.image.image_id}.jpg`,
	inferSize: true,
})
---

<img
	src={image.src}
	data-zoomable={zoomable}
	data-zoom-src={zoomable && original.src}
	data-width={image.attributes.width}
	data-height={image.attributes.height}
	data-zoom-width={original.attributes.width}
	data-zoom-height={original.attributes.height}
	data-original-format="jpg"
	{...image.attributes}
/>
