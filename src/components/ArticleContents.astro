---
import type { Palette } from "src/utils/palettes"
import BackHome from "./BackHome.astro"

interface Props {
	palette: Palette
	license?: string
}
const { palette, license } = Astro.props
---

<main
	class="px-[80px] pb-16 medium:px-[40px] small:px-[20px]"
	style={{
		color: palette.mainColor,
		fontFamily: palette.mainFont,
		fontSize: palette.fontSize || "initial",
		lineHeight: palette.lineHeight || 1.25,
	}}
>
	<div class="blog-article m-auto max-w-prose">
		<slot />
	</div>
</main>
