---
import Figure from "./Figure.astro"
import Gallery from "./Gallery.astro"

interface Props {
	lines: [ImageMetadata[], "wide" | "full" | undefined][]
}
const { lines } = Astro.props
---

{
	lines.map((line) => (
		<Gallery wide={line[1] == "wide"} full={line[1] == "full"}>
			{line[0].map((photo) => (
				<Figure src={photo} />
			))}
		</Gallery>
	))
}
