---
interface Props {
	src: string
	autoplay?: boolean
	muted?: boolean
	loop?: boolean
	controls?: boolean
	poster?: string
	caption?: string
}
const { src, autoplay, muted, loop, controls, poster, caption } = Astro.props
---

<figure>
	<video
		width="1920"
		height="1080"
		src={src}
		autoplay={autoplay}
		muted={muted}
		loop={loop}
		controls={controls}
		poster={poster}></video>
	{
		Astro.slots.has("default") && (
			<figcaption>
				<slot />
			</figcaption>
		)
	}
	{
		caption && (
			<figcaption>
				<slot>
					<p>{caption}</p>
				</slot>
			</figcaption>
		)
	}
</figure>
