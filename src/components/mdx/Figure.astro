---
// TODO: Utiliser Image dans les figures (ou remplacer toutes les figure)

interface Props {
	src: string
	alt?: string
	caption?: string
}
const { src, alt, caption } = Astro.props
---

<figure>
	<img src={src} alt={alt} />
	{
		Astro.slots.has("default") && (
			<figcaption>
				<slot />
			</figcaption>
		)
	}
	{
		caption && (
			<figcaption>
				<slot>
					<p>{caption}</p>
				</slot>
			</figcaption>
		)
	}
</figure>
