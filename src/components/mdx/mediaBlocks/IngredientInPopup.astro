---
import getEntryOrThrow from "$utils/content/getEntryOrThrow"

// This component replaces `Ingredient.astro` inside popups. Unlike `Ingredient.astro`,
// this doesn't render the linked page in order to avoid infinite loops.
interface Props {
	id: string
}
const { id } = Astro.props

const ingredient = await getEntryOrThrow("ingredients", id)
---

<a
	data-icon="chef-hat"
	href={`/kitchen/${ingredient.id}`}
	class="unstyled decoration-stone-400 decoration-dotted decoration-2 underline-offset-4"
	><slot /></a
>
