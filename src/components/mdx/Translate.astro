---
import NewPopup from "./PopupV2.astro"
// This file is ignored by Prettier to avoid empty spaces before or after.
---

<NewPopup padding noUnderline><span class="translation-lang mobile-touch">EN</span><Fragment slot="popup-contents">
	<slot />
</Fragment></NewPopup>

<style is:global>
.translation-lang {
	content: "EN";
	font-feature-settings: "c2sc";
	font-size: 0.5em;
	vertical-align: baseline;
	position: relative;
	top: -0.55em;
	margin-left: -0.05em;
	margin-right: -0.05em;
	font-size: 0.7em;
	font-weight: 400;
}
:root[data-palette="source-serif"] .translation-lang {
	font-weight: 400;
	color: inherit;
	font-family: "Source Serif Caption", "Source Serif", serif;
}
</style>
