---
import type { getDiaryData } from "$utils/getCollection"
import FootstepsIcon from "$icons/ion/footsteps.svg"
import MapCollectionIcon from "$icons/tdesign/map-collection.svg"

interface Props {
	entry: Awaited<ReturnType<typeof getDiaryData>>
}

const { entry } = Astro.props
---

{
	entry.category == "trips" && (
		<FootstepsIcon size="0.9em" class="mb-[0.15em] ml-1 inline-block text-zinc-500" />
	)
}
{
	entry.category == "lists" && (
		<MapCollectionIcon size="1.1em" class="mb-[0.11em] ml-1 inline-block text-zinc-500" />
	)
}
