---
import { checkLocale } from "$utils/i18n"
import { title } from "$utils/museum"
import type { CollectionEntry } from "astro:content"

interface Props {
	piece: CollectionEntry<"pieces">
	hideIfUntitled?: boolean
}
const { piece, hideIfUntitled } = Astro.props
---

{
	hideIfUntitled && piece.data.title === false
		? ""
		: title(piece.data.title, checkLocale(Astro.currentLocale))
}
