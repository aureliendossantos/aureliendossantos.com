---
interface Props {
	square?: boolean
	color?: "yellow" | "sky" | "card"
	big?: boolean
}
const { square, color, big } = Astro.props
// HACK: text color is hacky, check if it's still right after the background has been changed
// If I ever make them clickable, add hover:ring-[1.5px]
---

<span
	class:list={[
		"cursor-pointer p-[5px] font-adelle-sans ring-0 transition",
		{ "text-xs": !big },
		{ "mr-2 text-sm": big },
		{ "rounded px-2": square },
		{ "rounded-full px-3": !square },
		{ "bg-fi-blue-400/10 text-fi-blue-400 ring-fi-blue-400": !color },
		{
			"bg-[#ECF0EB] text-fi-blue-400 ring-fi-blue-400": color == "card",
		},
		{ "bg-yellow-800": color == "yellow" },
		{ "bg-fi-orange-400/10 text-fi-orange-400 ring-fi-orange-400": color == "sky" },
	]}><slot /></span
>
