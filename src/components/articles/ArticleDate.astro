---
import formatDate from "$utils/formatting/formatDate"

interface Props {
	date: Date
	style?: string | Record<string, any> | undefined | null
	nonBreakingSpaces?: boolean
	yearOnly?: boolean
	noYear?: boolean
}
const { date, style, nonBreakingSpaces, yearOnly, noYear } = Astro.props

const formattedDate = () => {
	const string = formatDate(date, yearOnly, noYear)
	if (nonBreakingSpaces) return string.replaceAll(" ", "Â ")
	return string
}
---

<time datetime={date.toISOString()} style={style}>{formattedDate()}</time>
