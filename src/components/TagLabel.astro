---
interface Props {
	label: string
	slug?: string
	count: number
	type: "category" | "tag" | "place"
	disabled?: boolean
}
const { label, slug, count, type, disabled } = Astro.props

const path = { category: "categories", tag: "tags", place: "places" }
---

<a
	href={`/${path[type]}/${slug || label}`}
	style={disabled ? "pointer-events: none;cursor: default;" : ""}
	class={disabled
		? "bg-slate-100 text-slate-400 dark:bg-slate-900 dark:text-slate-600"
		: "bg-slate-200 text-slate-600 hover:bg-slate-300 active:bg-slate-400 dark:bg-slate-800 dark:text-slate-400 dark:hover:bg-slate-700 dark:active:bg-slate-600"}
	>{label}{"Â "}<span
		class={disabled ? "text-slate-300 dark:text-slate-700" : "text-slate-400 dark:text-slate-600"}
		>{count}</span
	></a
>
