{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$components/*": ["src/components/*"],
			"$layouts/*": ["src/layouts/*"],
			"$content/*": ["src/content/*"],
			"$utils/*": ["src/utils/*"],
			"$styles/*": ["src/styles/*"],
			"$icons/*": ["src/styles/icons/*"],
			"$prisma/*": ["prisma/*"]
		}
	}
}
